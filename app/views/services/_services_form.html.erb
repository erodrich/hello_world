<%= simple_form_for(@service) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :addr_from %>
    <%= f.input :addr_to %>
    <%= f.input :date %>
    <%= f.input :time %>
    <%= f.input :num_passengers %>
    <%= f.input :type_vehicle %>
    <%= f.input :payment_method %>
    <% if current_user.admin? || current_user.driver %> 
      <%= f.input :status, collection: [ "Pendiente", "Asignado", "Finalizado"], :default => @service.status %>
    <% end %>
    <% if @drivers %>
      <%= f.input :driver_id, collection: @drivers, :label_method => :nombre ,:value_method => :id %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit "Enviar" %>
  </div>
<% end %>
