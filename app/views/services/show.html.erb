<h1>
  Usuario: <%= @user.nombre + " " + @user.apellido%>
</h1>

<h2>Servicios</h2>

<p>
  <strong>Servicio</strong>
  <%= @service.id %>
</p>

<p>
  <strong>Desde:</strong>
  <%= @service.addr_from %>
</p>

<p>
  <strong>Hacia:</strong>
  <%= @service.addr_to %>
</p>

<p>
  <strong>Dia:</strong>
  <%= @service.date %>
</p>

<p>
  <strong>Hora:</strong>
  <%= @service.time %>
</p>

<p>
  <strong>Pasajeros:</strong>
  <%= @service.num_passengers %>
</p>

<p>
  <strong>Tipo de Vehiculo:</strong>
  <%= @service.type_vehicle %>
</p>
<p>
  <strong>Metodo de Pago:</strong>
  <%= @service.payment_method %>
</p>

<p>
  <strong>Estado:</strong>
  <%= @service.status %>
</p>

<% if current_user.admin? %>
  <p>
    <strong>Conductor:</strong>
    <%= @driver.nombre + " " + @driver.apellido %>
  </p>
<% end %>
<%= link_to 'Ver todos los Servicios', admin_services_path %>
<%= link_to 'Regresar a Servicios Pendientes', admin_index_path %>