<p id="notice"><%= notice %></p>

<h1>Listado de Usuarios</h1>

<%= link_to 'Nuevo', new_user_path %>

<%= will_paginate @users%>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Correo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.nombre + " " + user.apellido, user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <% if current_user.admin? && !current_user?(user) %>
          <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este usuario?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

