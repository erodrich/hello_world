<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :apellido %>
    <%= f.input :correo, placeholder: 'user@domain.com' %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, label: 'Confirmar contraseÃ±a:' %>
    <% if @user.driver %>
      <% if @user.active %>
        <%= f.input :active, as: :boolean, :default => true%>
      <% else %>
        <%= f.input :active, as: :boolean, checked_value: true%>
      <% end %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit "Enviar" %>
  </div>
<% end %>
